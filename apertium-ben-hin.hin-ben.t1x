   <rule comment="RULE: PRONOUN">
      <pattern>
        <pattern-item n="prn"/>
      </pattern>
      <action>
        <call-macro n="pronoun_init">
          <with-param pos="1" />
        </call-macro>
        <choose>
           <when>
             <test>
               <and>
                 <equal><var n="persvar"/><lit-tag v=""/></equal>
                 <equal><var n="honourvar"/><lit-tag v=""/></equal>
               </and>
             </test>
             <out>
               <chunk name="prn">
                 <tags>
                   <tag><lit-tag v="NP"/></tag>
                   <tag><var n="animvar"/></tag>
                   <tag><var n="genvar"/></tag>
                   <tag><var n="nbrvar"/></tag>
                   <tag><var n="casevar"/></tag>
                  </tags>
                 <lu>
                   <clip pos="1" side="tl" part="lemh"/>
                   <clip pos="1" side="tl" part="a_prn"/>
                   <clip pos="1" side="tl" part="anim"/>
                   <clip pos="1" side="tl" part="gen" link-to="3"/>
                   <clip pos="1" side="tl" part="nbr" link-to="4"/>
                   <clip pos="1" side="tl" part="case" link-to="5"/>
                   <clip pos="1" side="tl" part="lemq"/>
                 </lu>
               </chunk>
             </out>
           </when>
           <when>
             <test>
               <equal><var n="honourvar"/><lit-tag v=""/></equal>
             </test>
             <out>
               <chunk name="prn">
                 <tags>
                   <tag><lit-tag v="NP"/></tag>
                   <tag><var n="animvar"/></tag>
                   <tag><var n="genvar"/></tag>
                   <tag><var n="nbrvar"/></tag>
                   <tag><var n="casevar"/></tag>
                   <tag><var n="persvar"/></tag>
                  </tags>
                 <lu>
                   <clip pos="1" side="tl" part="lemh"/>
                   <clip pos="1" side="tl" part="a_prn"/>
                   <clip pos="1" side="tl" part="pers" link-to="6"/>
                   <clip pos="1" side="tl" part="anim"/>
                   <clip pos="1" side="tl" part="gen" link-to="3"/>
                   <clip pos="1" side="tl" part="nbr" link-to="4"/>
                   <clip pos="1" side="tl" part="case" link-to="5"/>
                   <clip pos="1" side="tl" part="lemq"/>
                 </lu>
               </chunk>
             </out>
           </when>
           <otherwise>
             <out>
               <chunk name="prn">
                 <tags>
                   <tag><lit-tag v="NP"/></tag>
                   <tag><var n="animvar"/></tag>
                   <tag><var n="genvar"/></tag>
                   <tag><var n="nbrvar"/></tag>
                   <tag><var n="casevar"/></tag>
                   <tag><var n="persvar"/></tag>
                   <tag><var n="honourvar"/></tag>
                  </tags>
                 <lu>
                   <clip pos="1" side="tl" part="lemh"/>
                   <clip pos="1" side="tl" part="a_prn"/>
                   <clip pos="1" side="tl" part="pers" link-to="6"/>
                   <clip pos="1" side="tl" part="pers" link-to="7"/>
                   <clip pos="1" side="tl" part="anim"/>
                   <clip pos="1" side="tl" part="gen" link-to="3"/>
                   <clip pos="1" side="tl" part="nbr" link-to="4"/>
                   <clip pos="1" side="tl" part="case" link-to="5"/>
                   <clip pos="1" side="tl" part="lemq"/>
                 </lu>
               </chunk>
             </out>
           </otherwise>
        </choose>
      </action>
    </rule>


            <lu>
              <clip pos="1" side="tl" part="lemh"/>
              <clip pos="1" side="tl" part="a_verb"/>
              <clip pos="1" side="tl" part="tense" link-to="2"/>
              <clip pos="1" side="tl" part="tense" link-to="3"/>

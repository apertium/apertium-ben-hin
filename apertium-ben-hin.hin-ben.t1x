  <section-rules>

     <rule comment="RULE: ADJ">
      <pattern>
        <pattern-item n="adj"/>
      </pattern>
      <action>
        <out>
          <chunk name="adj">
            <tags>
              <tag><lit-tag v="AP"/></tag>
             </tags>
          <lu>
            <clip pos="1" side="tl" part="lemh"/>
            <clip pos="1" side="tl" part="a_adj"/>
            <clip pos="1" side="tl" part="sint"/>
            <lit-tag v="mf"/>
            <clip pos="1" side="tl" part="lemq"/>
          </lu>
          </chunk>
        </out>
      </action>
    </rule>

   <rule comment="RULE: NOUN">
      <pattern>
        <pattern-item n="noun"/>
      </pattern>
      <action>
        <call-macro n="noun_init">
          <with-param pos="1" />
        </call-macro>
        <out>
          <chunk name="noun">
            <tags>
              <tag><lit-tag v="NP"/></tag>
              <tag><clip pos="1" side="tl" part="anim"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
              <tag><var n="casevar"/></tag>
             </tags>
            <lu>
              <clip pos="1" side="tl" part="lemh"/>
              <clip pos="1" side="tl" part="a_n"/>
              <clip pos="1" side="tl" part="gen" link-to="3"/>
              <clip pos="1" side="tl" part="anim"/>
              <clip pos="1" side="tl" part="nbr" link-to="4"/>
              <clip pos="1" side="tl" part="case" link-to="5"/>
              <clip pos="1" side="tl" part="lemq"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

   <rule comment="RULE: NP_ANT">
      <pattern>
        <pattern-item n="np_ant"/>
      </pattern>
      <action>
        <call-macro n="noun_init">
          <with-param pos="1" />
        </call-macro>
        <out>
          <chunk name="pn">
            <tags>
              <tag><lit-tag v="NP"/></tag>
              <tag><lit-tag v="hu"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
              <tag><var n="casevar"/></tag>
             </tags>
            <lu>
              <clip pos="1" side="tl" part="lemh"/>
              <clip pos="1" side="tl" part="a_n"/>
              <clip pos="1" side="tl" part="gen" link-to="3"/>
              <clip pos="1" side="tl" part="nbr" link-to="4"/>
              <clip pos="1" side="tl" part="case" link-to="5"/>
              <clip pos="1" side="tl" part="lemq"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

   <rule comment="RULE: NP_NO_ANT">
      <pattern>
        <pattern-item n="np_no_ant"/>
      </pattern>
      <action>
        <call-macro n="noun_init">
          <with-param pos="1" />
        </call-macro>
        <out>
          <chunk name="pn">
            <tags>
              <tag><lit-tag v="NP"/></tag>
              <tag><lit-tag v="nn"/></tag>
              <tag><var n="genvar"/></tag>
              <tag><var n="nbrvar"/></tag>
              <tag><var n="casevar"/></tag>
             </tags>
            <lu>
              <clip pos="1" side="tl" part="lemh"/>
              <clip pos="1" side="tl" part="a_n"/>
              <clip pos="1" side="tl" part="gen" link-to="3"/>
              <clip pos="1" side="tl" part="nbr" link-to="4"/>
              <clip pos="1" side="tl" part="case" link-to="5"/>
              <clip pos="1" side="tl" part="lemq"/>
